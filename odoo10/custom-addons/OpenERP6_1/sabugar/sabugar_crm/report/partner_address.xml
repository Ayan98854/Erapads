<?xml version="1.0" encoding="ISO-8859-1"?>
<addresses>
    <address_id type="fields" name="id,name,amount_total">
        <name type="field" name="name"/>
        <total type="field" name="amount_total"/>
         <contact type="zoom" name="partner_id.address">
            <partner_name type="field" name="partner_id.name"/>
            <name type="field" name="name"/>
            <street type="field" name="street"/>
            <street2 type="field" name="street2"/>
            <area type="field" name="area_id.name"/>
            <zip type="field" name="zip"/>
            <city type="field" name="city_id.name"/>
            <state type="field" name="state_id.name"/>
         </contact>

         <movelines type="zoom" name='order_line'>
            <references type="field" name="product_id.default_code"/>
            <qty type="field" name="product_uom_qty"/>
         </movelines>

    </address_id>

</addresses>
