<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_sale_order_form_transient_view" model="ir.ui.view">
        <field name="name">Sale Order Transient Form</field>
        <field name="model">create.saleorder</field>
        <field name="arch" type="xml">
            <form string="Sale Order">
                <group col="4">
                    <field name="partner_id" readonly="True"/>
                    <field name="date_order"/>
                    <field name="delivery_agency_id"/>
                </group>
                <footer>
                    <button string="Create Sale Order" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="create_sale_order_action" model="ir.actions.act_window">
        <field name="name">Sale Order</field>
        <field name="res_model">create.saleorder</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_sale_order_form_transient_view"/>
        <field name="target">new</field>
    </record>
</odoo>